<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Blue" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:colorPrimary">@android:color/holo_blue_dark</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="android:colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:colorBackground">@android:color/holo_blue_bright</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_dark</item>
        <item name="android:statusBarColor">?android:attr/colorAccent</item>
        <item name="android:colorForeground">@android:color/background_dark</item>
    </style>

</resources>
